{
  "name": "fhedback-contract",
  "description": "Confidential Survey dApp. Powered by Zama's FHEVM.",
  "version": "0.0.1",
  "engines": {
    "node": ">=20",
    "npm": ">=7.0.0"
  },
  "license": "BSD-3-Clause-Clear",
  "homepage": "https://github.com/zama-ai/fhevm-hardhat-template/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zama-ai/fhevm-hardhat-template.git"
  },
  "keywords": [
    "fhevm",
    "zama",
    "eth",
    "ethereum",
    "dapps",
    "wallet",
    "web3",
    "typescript",
    "hardhat"
  ],
  "dependencies": {
    "@fhevm/solidity": "^0.9.1",
    "@openzeppelin/contracts": "^5.4.0",
    "encrypted-types": "^0.0.4"
  },
  "devDependencies": {
    "@fhevm/hardhat-plugin": "^0.3.0-1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.8",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@zama-fhe/relayer-sdk": "0.3.0-5",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.27.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^2.3.0",
    "hardhat-tracer": "^3.2.1",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "rimraf": "^5.0.5",
    "solhint": "^6.0.0",
    "solidity-coverage": "^0.8.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.3"
  },
  "files": [
    "contracts"
  ],
  "scripts": {
    "clean": "rm -rf ./fhevmTemp ./artifacts ./cache ./coverage ./types ./coverage.json ./dist ./deployments",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile && npm run typechain",
    "compile:force": "npm run clean && npm run compile",
    "coverage": "SOLIDITY_COVERAGE=true hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && npm run typechain",
    "lint": "npm run lint:sol && npm run lint:ts && npm run prettier:check",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "test": "hardhat test",
    "build:ts": "tsc --project tsconfig.json",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true ts-node scripts/generate-types.ts",
    "typechain:clean": "rimraf ./types && npm run typechain",
    "retest": "npm run compile && npm run test",
    "deploy": "hardhat deploy --tags All",
    "deploy:local": "hardhat deploy --network hardhat --tags All",
    "deploy:sepolia": "hardhat deploy --network sepolia --tags All",
    "generate:contract-info": "hardhat run scripts/generate-contract-info.ts",
    "generate:contract-info:sepolia": "hardhat run scripts/generate-contract-info.ts --network sepolia",
    "copy:to-frontend": "ts-node scripts/copy-to-frontend.ts sepolia",
    "copy:to-frontend:network": "ts-node scripts/copy-to-frontend.ts",
    "deploy:full": "npm run deploy:sepolia && npm run copy:to-frontend",
    "setup:env": "bash scripts/setup-env.sh",
    "check:env": "hardhat run scripts/check-env.ts"
  },
  "prettier": {
    "endOfLine": "auto"
  }
}
